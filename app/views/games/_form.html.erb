<%= form_for(game) do |f| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>Winner:</p>
  <div>
    <% @players.each do |player| %>
      <%= f.radio_button(:winner_id, player.id) %>
      <%= f.label player.name %>
    <% end %>
  </div>

  <p>Loser:</p>
  <div>
    <% @players.each do |player| %>
      <%= f.radio_button(:loser_id, player.id) %>
      <%= f.label player.name %>
    <% end %>
  </div>

  <p></p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

