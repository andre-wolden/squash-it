<p id="notice"><%= notice %></p>

<h3>Games overview</h3>

<table>
  <thead>
    <tr>
      <th>Winner</th>
      <th>Loser</th>
      <th>DateTime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td>
          <% @players.each do |player| %>
            <% if player.id == game.winner_id %>
              <%= player.name %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% @players.each do |player| %>
            <% if player.id == game.loser_id %>
              <%= player.name %>
            <% end %>
          <% end %>
        </td>
        <td><%= game.created_at %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

